<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/simple_backapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ytlinkvideo"
            android:layout_width="367dp"
            android:layout_height="54dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/design_edittext"
            android:ems="10"
            android:hint="Введите ссылку"
            android:inputType="text"
            android:textColor="@color/white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/download_video"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="216dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Download"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ytlinkvideo" />

        <Button
            android:id="@+id/info_video"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:text="Info"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/download_video"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/download_video"
            app:layout_constraintTop_toBottomOf="@+id/download_video" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>